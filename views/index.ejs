<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        body {
            background-color: #212529;
            color: whitesmoke;
        }

        h1 {
            text-align: center;
        }
    </style>
    <title>URL Shortener</title>
</head>

<body>

    <div class="container">

        <h1>URL Shortener</h1>

        <form action="/shortUrls" method="POST" class="my-4 d-flex align-items-center">

            <label for="fullUrl" class="visually-hidden">URL</label>
            <input type="url" placeholder="Type Here URL" class="form-control me-2" name="fullUrl" id="fullUrl"
                required>
            <button type="submit" class="btn btn-primary">Shorten</button>
        </form>

        <table class="table table-striped table-responsive table-dark">

            <thead>

                <tr>

                    <th>Input URL</th>
                    <th>Short URL</th>
                </tr>
            </thead>

            <tbody>

                <% shortUrls.forEach(shortUrl=> { %>

                    <tr>

                        <td>
                            <a class="link-underline link-underline-opacity-0" href="<%= shortUrl.full %>">
                                <%= shortUrl.full %>
                            </a>
                        </td>
                        <td>
                            <a class="link-underline link-underline-opacity-0" href="<%= shortUrl.short %>">
                                <%= shortUrl.short %>
                            </a>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>

</body>

</html>